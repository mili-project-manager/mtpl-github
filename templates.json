[
  {
    "path": ".github/PULL_REQUEST_TEMPLATE.md.hbs",
    "handlers": [
      {
        "name": "ignore",
        "options": {
          "eval": "resource.repository.isGitHubRepo === false"
        }
      },
      "handlebars"
    ]
  },
  {
    "path": ".github/workflows/codeql-analysis.yml",
    "handlers": [
      {
        "name": "ignore",
        "options": {
          "eval": "resource.repository.isGitHubRepo === false"
        }
      },
      {
        "name": "delete",
        "options": {
          "eval": "!resource.answers.actions.includes('codeql-analysis')"
        }
      }
    ]
  },
  {
    "path": ".github/**",
    "handlers": [
      {
        "name": "ignore",
        "options": {
          "eval": "resource.repository.isGitHubRepo === false"
        }
      }
    ]
  }
]
