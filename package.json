{
  "name": "@mtpl/github",
  "version": "0.1.0",
  "description": "The template for github",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "ca": "git add -A && git-cz -av",
    "commit": "git-cz",
    "release": "standard-version",
    "release:alpha": "standard-version --prerelease alpha",
    "release:first": "standard-version --first-release",
    "postpublish": "git push",
    "prepare": "is-ci || husky install",
    "ci": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/mili-project-manager/mtpl-github.git"
  },
  "keywords": [
    "mili",
    "template",
    "mtpl",
    "github"
  ],
  "author": "Val.istar.Guo <val.istar.guo@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mili-project-manager/mtpl-github/issues"
  },
  "homepage": "https://github.com/mili-project-manager/mtpl-github#readme",
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^5.2.0",
    "is-ci": "^3.0.0",
    "mili": "^4.4.1",
    "standard-version": "^9.3.0"
  }
}
